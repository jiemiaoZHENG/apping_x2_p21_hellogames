<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="100dp"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="GAME INFO" />

    <ImageView
        android:id="@+id/list_item_img"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/list_item_txt_id"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toEndOf="@+id/list_item_img"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:text="id" />

    <TextView
        android:id="@+id/list_item_txt_name"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@+id/list_item_img"
        app:layout_constraintTop_toBottomOf="@+id/list_item_txt_id"
        tools:text="name" />

    <TextView
        android:id="@+id/list_item_txt_description"
        android:layout_width="344dp"
        android:layout_height="154dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="85dp"
        android:text="Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_img" />

    <Button
        android:id="@+id/list_item_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:text="DO YOU WANT TO KNOW MORE?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_txt_description" />
</androidx.constraintlayout.widget.ConstraintLayout>